<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".SendSelectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/choose_title"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:weightSum="7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.65"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_file_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="2"
                android:background="@drawable/btn_delete" />

            <TextView
                android:id="@+id/txt_file_name"
                android:layout_width="229dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:background="@drawable/inputtext"
                android:gravity="center"
                android:text="파일이름"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_examine_go"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="5"
                android:background="@drawable/buttonrectangle"
                android:inputType="textPersonName"
                android:text="파일찾기" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_add_file"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_add_file"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:foregroundGravity="center_vertical|center_horizontal"
            app:srcCompat="@android:drawable/ic_menu_add" />

        <TextView
            android:id="@+id/txt_add_file"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:foregroundGravity="center_vertical|center_horizontal"
            android:gravity="center_vertical"
            android:text="파일추가"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:weightSum="10">

        <CheckBox
            android:id="@+id/box_select_examine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="검사여부" />

        <Button
            android:id="@+id/btn_select_next"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_next"
            android:gravity="center"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>